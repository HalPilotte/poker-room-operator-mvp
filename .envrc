# Load environment variables from .env when entering this directory
dotenv

# Prefer the project's Node 20 toolchain and shims (e.g. python -> python3)
PATH_add "$HOME/.nvm/versions/node/v20.19.5/bin"
PATH_add "$PWD/bin"

# Default local database config (overridable)
export DATABASE_URL="${DATABASE_URL:-postgresql://postgres:postgres@localhost:5432/poker?schema=public}"

# Github Token
export GITHUB_TOKEN=$(security find-generic-password -a "$USER" -s GITHUB_TOKEN -w)
if [ -d .venv ]; then
  source .venv/bin/activate
fi
